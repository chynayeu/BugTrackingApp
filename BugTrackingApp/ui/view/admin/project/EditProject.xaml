<Window x:Class="BugTrackingApp.ui.view.project.EditProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BugTrackingApp.ui.view.project"
        mc:Ignorable="d"
        Title="Редактировать Проект" Height="300" Width="400" ResizeMode="NoResize">
    <StackPanel>
        <Label x:Name="ProjectNameLable" Content="" HorizontalAlignment="Left" Margin="40,50,0,10" Height="30" Width="150"/>
        <TextBox x:Name="ProjectDescription" HorizontalAlignment="Left" Height="111" Margin="40,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,20,10,10">
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="20,0,20,0" Width="117" Click="Save_Click"/>
            <Button x:Name="BackBtn" Content="Назад" Margin="20,0,20,0" Width="117" Click="Back_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
